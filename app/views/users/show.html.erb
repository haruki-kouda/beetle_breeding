<div class="main">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.nickname}さん" %>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">ブリード歴</th>
            <td class="table__col2"><%= @user.breeding_history %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.nickname}のBREED情報" %>
      </h2>

      <% @breeds.each do |breed| %>
        <%= breed.name %>
        <%= breed.date %>
        <%= link_to image_tag(breed.image,), "#"%>
      <% end %>

    </div>
</div>