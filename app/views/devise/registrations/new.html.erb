<nav>
  <ul class="list-group ml-1 mt-5">
      <li class="list-group-item list-group-item-action list-group-item-secondary active mt-5 ">このサイトの目的</li>
      <li class="list-group-item list-group-item-action list-group-item-secondary active mt-1 ">使用ガイド</li>
      <li class="list-group-item list-group-item-action list-group-item-secondary active mt-1">飼育マニュアル</li>
      <li class="list-group-item list-group-item-action list-group-item-secondary active mt-1">みんなの投稿</li>
    <% if user_signed_in? %>
      <li >
      <%= link_to "My ページ", user_path(current_user.id), class: :"list-group-item list-group-item-action list-group-item-secondary active mt-1" %> 
      </li>
      <li>
      <%= link_to "NEW BREED", new_breed_path, class: :"list-group-item list-group-item-action list-group-item-secondary active mt-1" %>
      </li>
    <% end %>
  </ul>
</nav>

<main>
  <div class="user-title">ユーザー新規登録</div>
  <div class="new-user">
    <%= form_with model: @user, url: user_registration_path , local: true do |f| %>
     <%#= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
       メールアドレス
       <span class="up-name">必須</span>
      </div>
        <%= f.email_field :email, placeholder:"PC・携帯どちらでも可",autofocus: true, autocomplete: "email" %>

      <div class="field">
        パスワード
        <span class="up-name">必須</span>
      </div>
       <%= f.password_field :password, autocomplete: "new-password",placeholder:"6文字以上の半角英数字" %>

      <div class="field">
        パスワード再入力
        <span class="up-name">必須</span>
      </div>
      <%= f.password_field :password, autocomplete: "new-password" %>

      <div class="field">
        ニックネーム
       <span class="up-name">必須</span>
      </div>
      <%= f.text_field :nickname %>

      <div class="field">
        ブリード歴
        <span class="up-name">必須</span>
      </div>
     <%= f.text_field :breeding_history ,placeholder:"半角数字のみ 例) 2"%>
  
      <div class="field">
        プロフィール
      <span class="up-name">必須</span>
      </div>
      <%= f.text_area :profile %>

      <div class="actions">
        <%= f.submit "新規登録", class: :" btn btn-secondary" %>
      </div>
      <% end %>
    </div>
</main>