<div class="form__wrapper">
        <h2 class="page-heading">編集BREED投稿</h2>
      <%= form_with model: @breed, url: breed_path(@breed.id), local: true do |f|%>

        <div class="field">
            <%= f.label :name, "題名" %><br />
            <%= f.text_field :name %>
        </div>

        <div class="field">
            <%= f.label :parent_information, "親情報" %><br />
            <%= f.text_field :parent_information %>
        </div>

        <div class="field">
            <%= f.label :date, "セット日" %><br />
            <%= f.text_field :date%>
        </div>

        <div class="field">
            <%= f.label :result, "結果" %><br />
            <%= f.text_area :result, class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :note, "備考欄" %><br />
          <%= f.text_area :note, class: :form__text %>
        </div>

        <div class="actions">
          <%= f.submit "保存する", class: :form__btn  %>
        </div>
      <% end %>
  </div>